{% extends "base.html" %}


- block title
  = title

- block elsolepes 
  %div{'data-role':'fieldcontain'}
    %label{'for':'from'}
      %h2 Itt vagy:
    %input#from{'type':'text', 'name':'from'}
  %h2 Ide mennél:
  %ul#to{'data-role':'listview', 'data-inset':'true'}
    - for venyu in venyuz
      %li
        %a{'href':'#masodiklepes'}
          = venyu.name
        .ittvannak
          - for friend in venyu.here
            %img{'class': 'avatar', 'src': '{{friend.photo}}'}
    %li
      %a{'href':'#masodiklepes'}
        Egyéb&#0133;

- block masodiklepes
  %h2 Így jutsz el ide: <span id="uticel"></span>
  %ul{'id':'utvonal', 'data-role':'listview', 'data-inset':'true'}
    %li
      Felszállsz egy 
      %a{'href':'#'} 123- as buszra
    %li
      %a két
    %li 
      %a há
  %p
    Menetidő: 12 perc.
